<div class="row center">
  <p>Subscribe to get newsletter and offers</p>
  <p><div id="response"></div></p>
  <%= form_tag(" /emaillist/subscribe ", method: "post", id: "subscribe", remote: "true", class:"form-group") do -%>
    <div class="col-xs-8 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2 col-lg-4 col-lg-offset-3">
      <%= email_field(:email, :address, {id: "email", class:"form-control", placeholder: "Email Address", required: true}) %>
    </div>
    <div class="col-xs-3 col-sm-2 col-md-2 col-lg-2">
      <%= submit_tag("Sign Up!", class: "btn btn-default") %>
    </div>
  <% end %>
</div>