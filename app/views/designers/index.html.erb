<div class="container">
<div class="admin-wrapper">
<p id="notice"><%= notice %></p>


<h3>Listing Designers</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Designer Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @designers.each do |designer| %>
      <tr>
        <td><%= designer.designer_name %></td>
        <td><%= link_to 'Show', designer %></td>
        <td><%= link_to 'Edit', edit_designer_path(designer) %></td>
        <td><%= link_to 'Destroy', designer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<% if current_user && current_user.admin? %>
  <%= link_to 'New Designer', new_designer_path, class: 'admin-buttons' %>
<% end %>
  
</div>
</div>