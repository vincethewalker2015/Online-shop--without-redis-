<header id="stockists_head">
  
</header>

<div class="container">
<div class="row product_top">

<p id="notice"><%= notice %></p>



<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stockists.each do |stockist| %>
      <tr>
        <td><%= stockist.name %></td>
        <td><%= stockist.address %></td>
        <td><%= link_to stockist.website %></td>
      <% if current_user && current_user.admin? %>   

        <td><%= link_to 'Show', stockist %></td>
        <td><%= link_to 'Edit', edit_stockist_path(stockist) %></td>
        <td><%= link_to 'Destroy', stockist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>  
      </tr>
    <% end %>
  </tbody>
</table>

